<% layout("/layouts/boilerplate")-%>
<body>
  <br>
    <h4>All Listings</h4>
    <br>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let listings of allListings){%>
            <a href="./listings/<%=listings._id%>" class="listing-link">
            <div class="card col">
                <img src="<%=listings.image%>" class="card-img-top" alt="..." style="height: 20rem;">
                <div class="card-img-overlay">
                </div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%=listings.title%></b><br>
                    &#x20b9;<%=listings.price.toLocaleString("en-IN")%>/night
                </p>
                </div>
              </div>
            </a>
              <%}%>
            
    </div>
</body>



